{
  "compilerOptions": {
    "target": "es5",                       
    "module": "esnext",                    
    "jsx": "react-jsx",                    
    "moduleResolution": "node",            
    "esModuleInterop": true,               
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                         
    "skipLibCheck": true,                   
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "declaration": true,                    
    "outDir": "./dist",                     
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@types/*": ["@types/*"]
    }                       
  },    
  "include": [
    "src/**/*.ts",          
    "src/**/*.tsx",
    "@types/**/*.d.ts"      
  ],
  "exclude": [
    "node_modules",             
    "dist"                      
  ]
}
