{
  "compilerOptions": {
    "target": "es5",                        // Transpiles to ES5 for compatibility with older browsers
    "module": "esnext",                     // Uses the latest module system (ES Modules)
    "jsx": "react-jsx",                     // Enables the new JSX transform for React 17+
    "moduleResolution": "node",             // Resolves modules similar to Node.js module resolution
    "esModuleInterop": true,                // Allows default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforces consistent file name casing across the project
    "strict": true,                         // Enables all strict type-checking options
    "skipLibCheck": true,                   // Skips type-checking for third-party declaration files
    "typeRoots": ["./node_modules/@types", "./src/types"], // Includes types from both @types and custom type files
    "declaration": true,                    // Generates .d.ts files for type declarations
    "outDir": "./dist",                     // Outputs compiled files into the `dist` folder
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@types/*": ["@types/*"]
    }                       // Generates source maps for easier debugging
  },    
  "include": [
    "src/**/*.ts",                          // Includes all TypeScript files in `src` folder
    "src/**/*.tsx",
    "@types/**/*.d.ts"                           // Includes all TypeScript/JSX (React) files in `src` folder
  ],
  "exclude": [
    "node_modules",                         // Excludes `node_modules` from compilation
    "dist"                                  // Excludes the output directory to prevent conflicts
  ]
}
